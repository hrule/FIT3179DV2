{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "projection": {"type": "albersUsa"},
  "params": [
    {"name": "season_brush"},
    {
      "name": "showEdges",
      "value": true
    }
  ],
  "layer": [
    {
      "data": {
        "graticule": {
          "extent": [[-125, 25], [-66, 50]],
          "step": [10, 10]
        }
      },
      "mark": {"type": "geoshape", "stroke": "#ccc"}
    },
    {
      "data": {
        "url": "data/states-10m-cut.json",
        "format": {"type": "topojson", "feature": "states"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "data/trade_counts_per_season.csv"},
      "transform": [
        {
          "filter": "season_brush ? (+datum.Season >= season_brush[0] && +datum.Season <= season_brush[1]) : true"
        },
        {
          "lookup": "Team",
          "from": {
            "data": {"url": "data/nba_stadiums.csv"},
            "key": "Team",
            "fields": ["Lat", "Long"]
          }
        },
        {
          "aggregate": [
            {"op": "sum", "field": "TradeCount", "as": "TotalTradeCount"},
            {"op": "min", "field": "Season", "as": "StartSeason"},
            {"op": "max", "field": "Season", "as": "EndSeason"}
          ],
          "groupby": ["Team", "Lat", "Long"]
        },
        {
          "calculate": "datum.StartSeason + ' - ' + datum.EndSeason",
          "as": "SeasonRange"
        }
      ],
      "mark": {"type": "circle", "color": "#d95f0e"},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "TotalTradeCount",
          "type": "quantitative",
          "scale": {"domain": [0, 100], "range": [20, 1000]},
          "legend": {
            "title": "Total Trades",
            "orient": "left",
            "offset": -50
          }
        },
        "tooltip": [
          {"field": "Team", "type": "nominal"},
          {"field": "TotalTradeCount", "type": "quantitative", "title": "Total Trade count"},
          {"field": "SeasonRange", "type": "nominal", "title": "Seasons"}
        ]
      }
    },
    {
      "data": {"url": "data/team-team_trade_counts.csv"},
      "transform": [
        {
          "filter": "season_brush ? (+datum.Season >= season_brush[0] && +datum.Season <= season_brush[1]) : true"
        },
        {
          "lookup": "TeamA",
          "from": {
            "data": {"url": "data/nba_stadiums.csv"},
            "key": "Team",
            "fields": ["Lat", "Long"]
          },
          "as": ["LatA", "LongA"]
        },
        {
          "lookup": "TeamB",
          "from": {
            "data": {"url": "data/nba_stadiums.csv"},
            "key": "Team",
            "fields": ["Lat", "Long"]
          },
          "as": ["LatB", "LongB"]
        },
        {
          "aggregate": [
            {"op": "sum", "field": "TradeCount", "as": "TotalTradeCount"}
          ],
          "groupby": ["TeamA","TeamB","LatA","LongA","LatB","LongB"]
        }
      ],
      "mark": {"type": "rule", "color": "#1f77b4", "opacity": 0.35, "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "LongA"},
        "latitude": {"field": "LatA"},
        "longitude2": {"field": "LongB"},
        "latitude2": {"field": "LatB"},
        "tooltip": [
          {"field": "TeamA", "type": "nominal"},
          {"field": "TeamB", "type": "nominal"},
          {"field": "TotalTradeCount", "type": "quantitative", "title": "Trades"}
        ],
        "opacity": {
          "condition": {"param": "showEdges", "value": 0.35},
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
      "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelColor": "white",
      "titleColor": "white"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white"
    },
    "background": "rgba(255, 255, 255, 0)"
  }
}
